# LunaPay API - Configurações de Ambiente

# ===========================================
# JWT (deve ser O MESMO do LunaCore!)
# ===========================================
LUNACORE_JWT_SECRET=seu-secret-jwt-aqui-deve-ser-o-mesmo-do-core

# ===========================================
# Database
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lunapay
DB_USER=lunapay
DB_PASSWORD=secret

# ===========================================
# Gateway Asaas
# ===========================================
ASAAS_ENABLED=false
ASAAS_API_KEY=
ASAAS_BASE_URL=https://sandbox.asaas.com/api/v3
ASAAS_WEBHOOK_SECRET=

# Quando tiver credenciais, mude para:
# ASAAS_ENABLED=true
# ASAAS_API_KEY=sua_api_key_aqui
# ASAAS_BASE_URL=https://api.asaas.com/v3  (produção)

# ===========================================
# Gateway C6 Bank
# ===========================================
C6_ENABLED=false
C6_API_KEY=
C6_API_SECRET=
C6_BASE_URL=https://api.c6bank.com.br
C6_WEBHOOK_SECRET=

# Quando tiver credenciais, mude para:
# C6_ENABLED=true
# C6_API_KEY=sua_api_key_aqui
# C6_API_SECRET=seu_api_secret_aqui

# ===========================================
# Server
# ===========================================
SERVER_PORT=8082

# ===========================================
# Logs
# ===========================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_LUNA_PAY=DEBUG
